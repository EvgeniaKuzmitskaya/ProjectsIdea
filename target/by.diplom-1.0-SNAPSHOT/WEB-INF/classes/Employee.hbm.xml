<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="By.career.Model.Employee" table="employee" schema="staff">
        <id name="idEmployee">
            <column name="id_employee" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="patronicname">
            <column name="patronicname" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="dateOfBirh">
            <column name="dateOfBirh" sql-type="date" not-null="true"/>
        </property>
        <property name="placeOfBirth">
            <column name="placeOfBirth" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="numberPassport">
            <column name="number_passport" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="datePassport">
            <column name="date_passport" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="insurance">
            <column name="insurance" sql-type="varchar(35)" length="35" not-null="true"/>
        </property>
        <property name="adress">
            <column name="adress" sql-type="varchar(95)" length="95" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>